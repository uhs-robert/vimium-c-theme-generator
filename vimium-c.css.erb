body {
  animation: show 200ms cubic-bezier(0, 0, 0.2, 1) forwards;
  box-shadow: var(--shadow);
}

#toolbar {
  color: var(--primary);
  opacity: 1;
}
.has-dark #toolbar {
  color: var(--n-primary);
}

.button:hover {
  background: inherit;
  color: var(--hover-primary);
}
.has-dark .button:hover {
  color: var(--n-hover-primary);
}

/* Omni Backgrounds */
#list {
  background: var(--bg-core);
  font-weight: var(--font-weight);
}
.has-dark #list {
  background: var(--n-bg-core);
}

#bar,
#input {
  background: var(--bg-mantle);
  font-weight: var(--font-weight);
}
.has-dark #bar,
.has-dark #input {
  background: var(--n-bg-mantle);
}

#bar {
  padding: 10px;
  border-bottom: none;
}

#bar::before {
  /* for hint or content icon before typing */
  content: "‚ùØ";
  position: absolute;
  left: 20px;
  z-index: 300;
  padding: 6px 0;
  font-weight: bold;
  font-size: var(--font-size);
  color: var(--secondary);
}
.has-dark #bar::before {
  color: var(--n-secondary);
}

#input {
  padding: var(--padding) 38px;
  /* Offset toolbar */
  padding-right: 72px;
  color: var(--fg);
  border: none;
  box-shadow: none;
}
.has-dark #input {
  color: var(--n-fg);
}

.item {
  border-color: var(--border);
}
.has-dark .item {
  border-color: var(--n-border);
}

.item .icon {
  width: 24px;
  height: 24px;
  padding-right: unset;
  margin-right: 10px;
  margin-top: 5px;
  background-position: bottom right;
  fill: var(--secondary);
}
.has-dark .item .icon {
  fill: var(--n-secondary);
}

.item .icon path {
  opacity: 0.25;
  position: absolute;
  z-index: -1;
  transform-origin: 0px 0px;
  transform: scale(0.75);
}

.item.s,
.item:hover {
  background-color: var(--bg-surface);
  border: 3px rgba(0, 0, 0, 0.02) solid;
  cursor: pointer;
}
.has-dark .item.s,
.has-dark .item:hover {
  background-color: var(--n-bg-surface);
}

.item .top {
  color: var(--primary);
  position: relative;
  height: 30px;
}
.has-dark .item .top {
  color: var(--n-primary);
}

.item .top .title {
  font-size: var(--font-size);
  line-height: 10px;
  margin-top: 2px;
}

.item .top .title match {
  color: var(--title-match);
}
.has-dark .item .top .title match {
  color: var(--n-title-match);
}

.item .top .title:empty::after {
  content: "<blank>";
}

.item .bottom {
  margin-top: -14px;
  padding-left: 14px;
}

.item .bottom a {
  color: var(--link);
  font-size: var(--font-size-link);
}
.has-dark .item .bottom a {
  color: var(--n-link);
}

.item .bottom a match {
  color: var(--link-match);
  text-decoration: none;
}
.has-dark .item .bottom a match {
  color: var(--n-link-match);
}

