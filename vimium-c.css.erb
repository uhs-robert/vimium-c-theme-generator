/* extras/vimium-c/vimium-c.css */
/* Generated by Oasis Vimium-C Theme Generator */
/* Day theme: <%= @day_name %> | Night theme: <%= @night_name %> */
/* #ui */

* {
  /*insertroot*/
  --font-size: 17px;
  --font-size-link: 10px;
  --font-weight: normal;
  --font: "Maple Mono NF", "Maple Mono", Consolas, Source Code Pro, sans;
  --padding: 0px;
  --shadow: 0 2px 4px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);

  /* ----------  DAY THEME  ---------- */
  --bg-core: <%= @day_bg_core %>;
  --bg-mantle: <%= @day_bg_mantle %>;
  --bg-surface: <%= @day_bg_surface %>;
  --fg: <%= @day_fg %>;
  --fg-dim: <%= @day_fg_dim %>;
  --link: <%= @day_link %>;
  --border: <%= @day_border %>;
  --primary: <%= @day_primary %>;
  --hover-primary: <%= @day_hover_primary %>;
  --secondary: <%= @day_secondary %>;
  --title-match: <%= @day_title_match %>;
  --link-match: <%= @day_link_match %>;

  /* ---------- NIGHT THEME ---------- */
  --n-bg-core: <%= @night_bg_core %>;
  --n-bg-mantle: <%= @night_bg_mantle %>;
  --n-bg-surface: <%= @night_bg_surface %>;
  --n-fg: <%= @night_fg %>;
  --n-link: <%= @night_link %>;
  --n-border: <%= @night_border %>;
  --n-primary: <%= @night_primary %>;
  --n-hover-primary: <%= @night_hover_primary %>;
  --n-secondary: <%= @night_secondary %>;
  --n-title-match: <%= @night_title_match %>;
  --n-link-match: <%= @night_link_match %>;

  font-family: var(--font);
  font-size: var(--font-size-link);
}

/* HUD */
.HUD {
  border-radius: 3px;
  text-transform: lowercase;
  color: var(--primary);
  max-width: 420px;
  min-width: unset;
  line-height: 20px;
  align-items: center;
  padding: 10px;
}
.HUD.D {
  color: var(--n-primary);
}

.HUD:after {
  background: var(--bg-core);
  border: var(--border);
}
.HUD.D:after {
  background: var(--n-bg-core);
  border: var(--n-border);
}

.HUD.UI {
  min-width: 380px;
  align-items: unset;
}

/* HINTS */
.LH {
  color: var(--fg);
  border: 1px solid var(--border);
  background: var(--bg-surface);
  box-shadow: var(--shadow);
}
.D .LH {
  color: var(--n-fg);
  border: 1px solid var(--n-border);
  background: var(--n-primary);
  box-shadow: var(--shadow);
}

.MC {
  color: var(--bg-surface);
}
.D .MC {
  color: var(--n-bg-surface);
}

